# Staten Academy - cPanel Apache Configuration
# Optimized for flat structure in public_html (standard cPanel setup)

# Enable Rewrite Engine
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Force HTTPS (uncomment after SSL is set up in cPanel)
    # RewriteCond %{HTTPS} off
    # RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
    
    # Assets are directly accessible at /assets/ (no rewrite needed for flat structure)
    # If assets are in public/assets/, uncomment the next two lines:
    # RewriteCond %{REQUEST_URI} ^/assets/
    # RewriteRule ^assets/(.*)$ public/assets/$1 [L]
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    # Prevent clickjacking
    Header set X-Frame-Options "SAMEORIGIN"
    
    # XSS Protection
    Header set X-XSS-Protection "1; mode=block"
    
    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Referrer Policy
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Protect sensitive files and directories
<FilesMatch "^(env\.php|config\.php|db\.php|\.git|\.gitignore|\.htaccess|README\.md)$">
    Order allow,deny
    Deny from all
</FilesMatch>

# Protect entire directories
RedirectMatch 403 ^/app/.*$
RedirectMatch 403 ^/config/.*$
RedirectMatch 403 ^/core/.*$
RedirectMatch 403 ^/docs/.*$
RedirectMatch 403 ^/archive/.*$

# Prevent directory browsing
Options -Indexes

# PHP Settings (if allowed by hosting)
<IfModule mod_php7.c>
    php_value upload_max_filesize 10M
    php_value post_max_size 10M
    php_value max_execution_time 300
    php_value max_input_time 300
</IfModule>

# Gzip Compression
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/html text/plain text/xml text/css text/javascript application/javascript application/json
</IfModule>

# Browser Caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType image/jpg "access plus 1 year"
    ExpiresByType image/jpeg "access plus 1 year"
    ExpiresByType image/gif "access plus 1 year"
    ExpiresByType image/png "access plus 1 year"
    ExpiresByType image/svg+xml "access plus 1 year"
    ExpiresByType text/css "access plus 1 month"
    ExpiresByType application/javascript "access plus 1 month"
</IfModule>
